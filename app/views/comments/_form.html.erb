<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
  <%= form_with model: comment, url: [board, comment], id: 'new_comment' do |form| %>
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control mb-3', rows: 4, placeholder: 'コメント', id: 'js-new-comment-body' %>
    </div>
    <div class="actions">
    <%= form.submit "投稿", class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>

    